<%- include('partials/header') %>
<h1>Available Books</h1>
<div class="row justify-content-center">
  <% books.forEach((book) => { %>
    <div class="col-md-9 m-2">
      <div class="card p-5">
        <div class="row card-body">
          <div class="col p-3">
            <img src="https://covers.openlibrary.org/b/isbn/<%=book.book_id%>-L.jpg" class="img-fluid" alt="Book Image">
          </div>
          <div class="col">
            <h5 class="card-title"><%=book.title%>></h5>
            <div class="card-text">
              <p>Author: <%=book.author%></p>
              <p>Review: <%=book.review%></p>
            </div class="row">
              <form class="edit" action="/edit" method="post">
                <button class="edit btn btn-primary" name="type" value="edit" type="submit"> Edit </button>
                <button class="edit btn btn-primary" name="type" value="delete"  type="submit"> Delete </button>
              </form>
            </div>
          </div>  
        </div>
      </div>
  <%}) %>
</div>
<%- include('partials/footer') %>
