<body>
  <h1>What's your Pokemon?</h1>
  <div class="card">
    <% if(locals.image) { %>
    <img src="<%= image %>" alt="pokeImage" class="card">
    <% } %> 
    <p>
      NAME: <%= name %>
    </p>
  </div>
  <p class="user">
    TYPE: <%= type %>
  </p>
  <button id="pokemon" onclick="window.location.href='/random'">Choose Random Pokemon</button>

</body>

</html>